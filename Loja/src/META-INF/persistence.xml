<?xml version="1.0" encoding="UTF-8" ?>

<persistence 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
                    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0" 
    xmlns="http://java.sun.com/xml/ns/persistence">
  
	<persistence-unit name="LibraryJPA" transaction-type="RESOURCE_LOCAL">
  
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>Loja.Produto</class>
        <class>Loja.Categoria</class>
        <class>Loja.Beleza</class>
        <class>Loja.Casa</class>
        <class>Loja.Acessorio</class>
 		<class>Loja.Roupa</class>
        <properties>
   
        <property name="eclipselink.target-database" value="Derby" />
            <property name="javax.persistence.jdbc.driver"
                value="org.apache.derby.jdbc.EmbeddedDriver" />
            <property name="javax.persistence.jdbc.url"
                value="jdbc:derby:C:\\Users\\gonca\\OneDrive\\Desktop\\ProjetoLP\\MyDB;create=true" />

            <!-- EclipseLink should create the database schema automatically -->
            
            <property name="eclipselink.ddl-generation"
                value="create-tables" />
            <property name="eclipselink.ddl-generation.output-mode"
                value="database" />
        </properties>

    </persistence-unit>
</persistence> 